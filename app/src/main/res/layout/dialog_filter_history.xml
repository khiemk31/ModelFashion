<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_top_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_filter">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Trạng thái đơn hàng"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top_filter"
            android:paddingBottom="30dp"
            android:paddingTop="20dp"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/ll_one_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_item_filter_history"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Chờ Xác Nhận"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/status2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_item_filter_history"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Đang Chờ Xử Lý"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_one_filter"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_item_filter_history"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Đang Giao"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/status4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_item_filter_history"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Hoàn Thành"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_three_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_two_filter"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_item_filter_history"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Thất Bại"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/status6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_item_filter_history"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Tất Cả"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:focusable="false"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_three_filter"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filter_history_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_filter_history_cancel"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Hủy"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/filter_history_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_filter_history_ok"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Xác nhận"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>